<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookSearch"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Name="TitleWindow" x:Class="BookSearch.MainWindow"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="350" Width="500" WindowStyle="None">
    <Grid Background="AliceBlue">
        <Label Content="本の情報管理アプリ" FontFamily="Arial" FontSize="45" Margin="0,100,0,0"
               HorizontalAlignment="Center" VerticalAlignment="Top"
               FontWeight="Bold" Height="55" Width="375"/>

        <Button Name="login" Content="ログイン" Width="75"
                FontSize="12" FontFamily="Yu Mincho"
                HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,100,60"
                Background="#FFFBFFA7" Foreground="Black" Click="login_Click" BorderBrush="Black"/>
        <Button Name="endTile" Content="終了" FontSize="12" Width="75" Margin="100,0,0,60"
                HorizontalAlignment="Center" VerticalAlignment="Bottom" FontFamily="Yu Mincho"
                Background="LightSkyBlue" Foreground="Black" Click="endTile_Click" BorderBrush="Black"/>
    </Grid>
</Window>
